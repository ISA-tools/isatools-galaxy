<?xml version='1.0' encoding='UTF-8'?>
<tool id="isatab_viewer" name="isatab_viewer" version="1.0">
  <description>View an ISA-Tab collection of files</description>
  <command><![CDATA[
    echo ${isa_files} &&
    view.py --input_collection='${isa_files}' --output_html='${html_file.extra_files_path}'
  ]]>
  </command>
  <inputs>
      <param name="isa_files" type="data_collection" label="ISA-Tabs" optional="false" help="The input must contain the i_*.txt, s_*.txt and a_*.txt files expected by ISA-Tab." />
  </inputs>
  <outputs>
    <data format="html" name="html_file" label="isatab.html"/>
</outputs>

  <help>
    TODO...
  </help>

  <citations>
    <citation type="doi">10.5281/zenodo.163640</citation>
    <citation type="doi">10.1038/ng.1054</citation>
  </citations>

</tool>